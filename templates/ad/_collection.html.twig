{% block _ad_images_widget %}
    <p>Ici, vous pouvez ajouter vos propres images</p>

    {{ form_widget (form) }}
    <input type="hidden" id="widgets-counter" value="0">
    <div class="form-group">
        <button type="button" id="add-image" class="btn-primary btn">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget (form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-sm-11">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-1">
                <button data-target="#block_{{ id }}" type="button" data-action="delete" class="btn btn-danger float-right delete-img-block">X</button>
            </div>
        </div>

    </div>
{% endblock %}